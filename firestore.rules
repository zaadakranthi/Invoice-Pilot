rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read their own user document.
    // They can update their own document, but cannot change their role.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId && request.resource.data.role == resource.data.role;
      allow create: if request.auth.uid == userId;
    }

    // All workspace-specific data is stored in subcollections under the user's document.
    // A user can read/write to their own subcollections.
    // A professional who is the "owner" of another user can also read/write to that user's subcollections.
    match /users/{userId}/{collection}/{docId} {
      allow read, write, delete: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(userId)).data.ownerId == request.auth.uid;
      allow create: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(userId)).data.ownerId == request.auth.uid;
    }
  }
}
